    <script>
      // Function to show the loader and hide the main content
      function showLoader() {
        document.getElementById('loaderOverlay').style.display = 'flex'; // Use flex to center the loader
        document.querySelector('.container-scroller').style.display = 'none'; // Hide the main content
      }

      // Function to hide the loader and show the main content
      function hideLoader() {
        document.getElementById('loaderOverlay').style.display = 'none'; // Hide the loader
        document.querySelector('.container-scroller').style.display = 'block'; // Show the main content
      }

      // Example of usage
      function fetchData() {
        showLoader(); // Show the loader

        // Simulate a delay for data fetching (e.g., API call)
        setTimeout(() => {
          console.log('Data fetched successfully!'); // Example success message
          hideLoader(); // Hide the loader after fetching data
        }, 2000); // Simulates a 2-second loading time
      }

      // Call the fetchData function when the window loads
      window.onload = function () {
        fetchData();
      };
      document.addEventListener('copy', function (e) {
        // Get the selected text
        let selection = window.getSelection();
        let text = selection.toString(); // Get only the plain text

        // Prevent the default copy behavior (copying with HTML)
        e.preventDefault();

        // Use the Clipboard API to write plain text to the clipboard
        if (e.clipboardData) {
          e.clipboardData.setData('text/plain', text); // Set the clipboard data to the plain text
        } else if (window.clipboardData) { // For older IE versions
          window.clipboardData.setData('Text', text);
        }
      });

    </script>
