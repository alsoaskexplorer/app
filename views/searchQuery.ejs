  <script>
    var form = document.getElementById('myForm');

      // You can add an event listener for form submission
      form.addEventListener('submit', function (event) {
        event.preventDefault();  // Prevent the form from submitting to demonstrate handling

        // Access form data
        var q = form.q.value;
        var hl = form.hl.value;
        var gl = form.gl.value;

        // Construct the URL with query parameters
        var url = '/paa?keyword=' + encodeURIComponent(q) +
          '&hl=' + encodeURIComponent(hl) +
          '&gl=' + encodeURIComponent(gl);

        // Open the URL in a new window
        window.open(url);

      });

    
    function copyToClipboard(button) {
      const row = button.closest('tr'); // Get the closest <tr> of the clicked button
      const secondColumnText = row.querySelector('td:nth-child(2)').innerText; // Get text from the second column
  
      navigator.clipboard.writeText(secondColumnText)
        .then(() => {
          console.log('Text copied to clipboard!');
          alert('Text copied to clipboard: ' + secondColumnText);
        })
        .catch(err => {
          console.error('Error copying text: ', err);
        });
    }
  </script>