  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <!-- <img src="../assets/images/logo.svg"> -->
                  <h2 class="text-dark" style="font-family: Teko; font-weight: 700;">AlsoAskExplorer</h2>
                </div>
                <h4>Enter new password</h4>
                <h6 class="font-weight-light">to change password.</h6>
                <form id="resetForm" class="pt-3">
                  <div class="form-group">
                    <input type="hidden" name="resetToken" value="<%= resetToken %>" required>
                    <input type="text" class="form-control form-control-lg" id="exampleInputPassword" placeholder="Enter new password" name="password">
                  </div>
                  <div class="mt-3 gap-2">
                    <button type="submit" class="btn btn-block btn-light shadow-sm btn-lg font-weight-medium auth-form-btn">Update Password</submit>
                  </div>
                 
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
