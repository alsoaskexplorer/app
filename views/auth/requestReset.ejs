  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <h2 class="text-dark" style="font-family: Teko; font-weight: 700;">AlsoAskExplorer</h2>
                </div>
                <h4>Reset password</h4>
                <h6 class="font-weight-light">Enter your registered email address!</h6>
                <form id="resetForm" class="pt-3">
                  <div class="form-group">
                    <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email ID" name="email" required>
                  </div>
                  <div class="mt-3 d-grid gap-2">
                    <button id="submitButton" type="submit" class="btn btn-block btn-light shadow-sm btn-lg font-weight-medium auth-form-btn">Submit Email</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
